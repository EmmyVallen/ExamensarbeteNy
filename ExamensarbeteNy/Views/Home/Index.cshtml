    {
        @for (var i = 0; i < 4 && i < ViewBag.AllCategories.Count; i++) 
        {
            var category = ViewBag.AllCategories[i];
            <div class="categorybox">
                <a href="@Url.Action("VisaProdukter", "Home", new { kategoriId = category.Id })">
                    <h5>@category.Namn</h5> 
                </a>
            </div>
        }
    }
    </div>
</section>

