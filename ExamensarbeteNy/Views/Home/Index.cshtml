    <button onclick="scrollToTop()" id="scrollBtn" title="Till toppen">Till toppen</button>
</section>

<script>
  
    window.onscroll = function() {
        scrollFunction();
    };

    function scrollFunction() {
        const scrollBtn = document.getElementById("scrollBtn");
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            scrollBtn.style.display = "block";
        } else {
            scrollBtn.style.display = "none";
        }
    }

    // Rulla tillbaka till toppen när användaren klickar på knappen
    function scrollToTop() {
        document.body.scrollTop = 0; // För Safari
        document.documentElement.scrollTop = 0; // För Chrome, Firefox, IE och Opera
    }
</script>

