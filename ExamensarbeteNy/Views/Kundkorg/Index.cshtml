@model List<Produkt> 
<h1>Din kundkorg</h1>
<!--EMMY-->
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Pris</th>
                <th>Beskrivning</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produkt in Model)
            {
                <tr>
                    <td><a href="@Url.Action("VisaProdukt", "Product", new { id = produkt.Id })">@produkt.Namn</a></td>
                    <td>@produkt.Pris</td>
                    <td>@produkt.Beskrivning</td>
                 
                                        <td>
                        <form asp-controller="Kundkorg" asp-action="TaBort" method="post">
                            <input type="hidden" name="produktId" value="@produkt.Id" />
                            <button type="submit">Ta bort vara</button>
                        </form>
                    </td
               
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Din kundkorg är tom.</p>
}

<form action="@Url.Action("Index", "Betalning")" method="get">
    <button type="submit">Köp varor</button>
</form>

