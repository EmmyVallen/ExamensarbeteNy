@model ExamensarbeteNy.Models.Produkt

<h1>Skapa en ny annons</h1>
<p>Här nedan skapar du din annons</p>
<br>
<p>I BildUrl kopierar ni in en URL från en webbsida.</p>

<form asp-controller="Product" asp-action="SkapaProdukt" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Namn">Namn:</label>
        <input asp-for="Namn" class="form-control" />
        <span asp-validation-for="Namn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KategoriId">Kategori:</label>
        <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.Kategorier"></select>
        <span asp-validation-for="KategoriId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChildKategoriId">Underkategori:</label>
        <select asp-for="ChildKategoriId" class="form-control" asp-items="ViewBag.ChildKategorier"></select>
        <span asp-validation-for="ChildKategoriId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Beskrivning">Beskrivning:</label>
        <input asp-for="Beskrivning" class="form-control" />
        <span asp-validation-for="Beskrivning" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pris">Pris:</label>
        <input asp-for="Pris" class="form-control" />
        <span asp-validation-for="Pris" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BildUrl">Bild URL:</label>
        <input asp-for="BildUrl" class="form-control" />
        <span asp-validation-for="BildUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Skapa</button>
</form>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Till startsidan</a>
